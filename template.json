{
  "variables": {
      "vm_name": "poudriere",

      "atlas_username": "{{env `ATLAS_USERNAME`}}",
      "atlas_name": "{{env `ATLAS_NAME`}}",
      "version": "0.0.0",

      "iso_url": "http://ftp.riken.jp/pub/FreeBSD/releases/ISO-IMAGES/10.2/FreeBSD-10.2-RELEASE-amd64-disc1.iso",
      "iso_checksum": "97908f5cd00d86cafeb2c265bfabbd0aa79f87e9b6b31ecdb756bc96a4a62e93",
      "iso_checksum_type": "sha256",
      "boot_prefetch": "<esc><wait>boot -s<enter><wait><wait10><wait5>/bin/sh<enter><wait>mdmfs -s 100m md1 /tmp<enter><wait>mdmfs -s 100m md2 /mnt<enter><wait>dhclient -p /tmp/dhclient.pid -l /tmp/dhclient.lease em0<enter><wait5>",
      "boot_postfetch": "bsdinstall script /tmp/installerconfig; shutdown -r now<enter>",
      "boot_wait": "10s",
      "disk_size": "32768",
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_wait_timeout": "1000s",
      "shutdown_command": "shutdown -p now",
      "headless": "true"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "FreeBSD_64",

      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": [
        "{{user `boot_prefetch`}}",
        "fetch -o /tmp/installerconfig http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig<enter><wait>",
        "{{user `boot_postfetch`}}"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "headless": "{{user `headless`}}"
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "freebsd-64",

      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": [
        "{{user `boot_prefetch`}}",
        "fetch -o /tmp/installerconfig http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig<enter><wait>",
        "{{user `boot_postfetch`}}"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "headless": "{{user `headless`}}"
    },
    {
      "type": "qemu",

      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": [
        "{{user `boot_prefetch`}}",
        "fetch -o /tmp/installerconfig http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig<enter><wait>",
        "{{user `boot_postfetch`}}"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "headless": "{{user `headless`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/vmguest.sh",
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'",
      "only": ["virtualbox-iso", "vmware-iso"]
    },
    {
      "type": "shell",
      "inline": [
          "pkg install -y python py27-pip",
          "pip install ansible",
          "ansible-galaxy install uchida.poudriere,0.2.1"
      ],
      "execute_command": "chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}"
    },
    {
      "type": "ansible-local",
      "playbook_file": "provision.yml",
      "command": "env ANSIBLE_FORCE_COLOR=1 PYTHONUNBUFFERED=1 ansible-playbook",
      "extra_arguments": "-e 'ansible_python_interpreter=/usr/local/bin/python2'"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh",
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "vagrantfile_template": "vagrantfile.template",
        "keep_input_artifact": false
      },
      {
        "type": "atlas",
        "only": ["vmware-iso"],
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "vmware_desktop",
          "version": "{{user `version`}}"
        }
      },
      {
        "type": "atlas",
        "only": ["qemu"],
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "qemu",
          "version": "{{user `version`}}"
        }
      },
      {
        "type": "atlas",
        "only": ["virtualbox-iso"],
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "version": "{{user `version`}}"
        }
      }
    ]
  ],
  "push": {
    "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
    "vcs": true
  }
}
